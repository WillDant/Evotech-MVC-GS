@model IEnumerable<ProjetoMvc.Models.Dispositivo>

@{
    ViewData["Title"] = "Lista de Dispositivos";
}

<section style="background-color: #f0f9f0; padding: 2rem; border-radius: 10px;">
    <h1 class="text-center mb-4" style="color: #4CAF50; font-weight: bold; font-size: 2.5rem;">Lista de Dispositivos</h1>

    <table class="table table-bordered table-hover mt-4" style="background-color: #ffffff; border: 2px solid #4CAF50; font-size: 1.2rem;">
        <thead style="background-color: #4CAF50; color: #ffffff; font-size: 1.3rem;">
            <tr>
                <th>Nome do Dispositivo</th>
                <th>Potência (W)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var dispositivo in Model)
                {
                    <tr>
                        <td>@dispositivo.nm_dispositivo</td>
                        <td>@dispositivo.potencia</td>
                        <td class="text-center">
                            <a asp-action="Editar" asp-route-id="@dispositivo.id_dispositivo" class="btn btn-md" style="background-color: #81C784; color: #ffffff; font-size: 1.1rem; padding: 0.6rem 1.2rem;">Editar</a>
                            <form asp-action="Deletar" asp-route-id="@dispositivo.id_dispositivo" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-md" style="background-color: #E57373; color: #ffffff; font-size: 1.1rem; padding: 0.6rem 1.2rem;">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center" style="color: #999; font-size: 1.3rem;">Nenhum dispositivo cadastrado.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-5">
        <a asp-action="Criar" class="btn btn-lg" style="background-color: #4CAF50; color: #ffffff; font-size: 1.5rem; padding: 1rem 2.5rem; font-weight: bold;">Adicionar Novo Dispositivo</a>
    </div>
    <section class="mt-5" style="background-color: #e8f5e9; padding: 2rem; border-radius: 10px;">
        <h2 class="text-center" style="color: #388E3C; font-weight: bold; font-size: 2rem;">Objetivo do projeto</h2>
        <p class="mt-4" style="font-size: 1.3rem; line-height: 1.8; color: #555;">
             Aqui serão cadastrados os dispositivos que estarão disponíveis para monitoramento de sua casa Smart Energy, assim economizando e ajudando o meio ambiente.
        </p>
        <p style="font-size: 1.3rem; line-height: 1.8; color: #555;">
            Juntos por um futuro melhor para o mundo todo.
        </p>
    </section>

</section>
