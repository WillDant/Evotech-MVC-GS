@model ProjetoMvc.DTO.UsuarioDTO

@{
    ViewData["Title"] = "Editar Usuário";
}

<section style="background-color: #f0f9f0; padding: 3rem; border-radius: 10px; max-width: 600px; margin: auto;">
    <h1 class="text-center mb-4" style="color: #4CAF50; font-weight: bold; font-size: 2.5rem;">Editar Usuário</h1>

    <form asp-action="Editar" asp-route-id="@Model.Id" method="post" style="font-size: 1.2rem;">
        <div class="mb-4">
            <label asp-for="Nome" class="form-label" style="font-weight: bold;">Nome</label>
            <input asp-for="Nome" class="form-control form-control-lg" style="border: 2px solid #4CAF50;" placeholder="Digite o nome do usuário" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Email" class="form-label" style="font-weight: bold;">E-mail</label>
            <input asp-for="Email" class="form-control form-control-lg" style="border: 2px solid #4CAF50;" placeholder="Digite o e-mail do usuário" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Senha" class="form-label" style="font-weight: bold;">Senha</label>
            <input asp-for="Senha" type="password" class="form-control form-control-lg" style="border: 2px solid #4CAF50;" placeholder="Digite a senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-lg" style="background-color: #4CAF50; color: #ffffff; padding: 0.8rem 2rem; font-weight: bold;">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-lg" style="background-color: #E57373; color: #ffffff; padding: 0.8rem 2rem; font-weight: bold;">Cancelar</a>
        </div>
    </form>
</section>
