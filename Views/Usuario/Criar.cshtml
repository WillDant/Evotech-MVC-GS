@model ProjetoMvc.Models.Usuario

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<section class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background-color: #f0f0f0;">
    <!-- Formulário Centralizado -->
    <div class="card shadow-lg border-0" style="max-width: 500px; width: 100%; background-color: #ffffff;">
        <div class="card-header text-center" style="background-color: #3CB371; color: #fff; font-size: 1.5rem;">
            <h2 class="mb-0">Cadastrar Usuário</h2>
        </div>
        <div class="card-body" style="padding: 2rem;">
            <form asp-action="Criar" method="post">
                <div class="mb-4">
                    <label asp-for="Nome" class="form-label" style="font-size: 1.2rem;">Nome</label>
                    <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite seu Nome" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Email" class="form-label" style="font-size: 1.2rem;">E-mail</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Digite seu E-mail" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Senha" class="form-label" style="font-size: 1.2rem;">Senha</label>
                    <input asp-for="Senha" class="form-control form-control-lg" type="password" placeholder="Digite a senha" />
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-around mt-4">
                    <button type="submit" class="btn" style="background-color: #5CB85C; color: #fff; font-size: 1.2rem; padding: 0.8rem 2rem;">Cadastrar</button>
                    <a asp-action="Atualizar" class="btn" style="background-color: #145812; color: #fff; font-size: 1.2rem; padding: 0.8rem 2rem;">Editar</a>
                    <a asp-controller="Home" asp-action="Index" class="btn" style="background-color: #2CB727; color: #fff; font-size: 1.2rem; padding: 0.8rem 2rem;">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
